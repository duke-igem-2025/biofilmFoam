FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      fvSchemes;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

ddtSchemes
{
  default         backward;
}

gradSchemes
{
  default         Gauss linear;
}

divSchemes
{
  default         none;
}

laplacianSchemes
{
  default         none;
  laplacian(d1,C) Gauss linear orthogonal;
  laplacian((pow((eps|(1-M)),a)*pow(M,b)),M) Gauss linear orthogonal;
}

interpolationSchemes
{
  default         none;
  d2              linear;
}

snGradSchemes
{
  default         orthogonal;
}


