FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      controlDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

application       fooFoam;

startFrom         latestTime;

startTime         0;

stopAt            endTime;

endTime           1800000; // 500h

deltaT            1e-3;

writeControl      adjustableRunTime;

writeInterval     36000;

purgeWrite        0;

writeFormat       ascii;

writePrecision    6;

writeCompression  off;

timeFormat        general;

timePrecision     6;

runTimeModifiable true;

adjustTimeStep    yes;

maxDeltaT         3600;

truncationError   0.01;

