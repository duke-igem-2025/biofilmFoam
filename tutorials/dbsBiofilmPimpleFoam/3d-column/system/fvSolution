FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      fvSolution;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

solvers
{
    
    p
    {
	solver           GAMG;
	smoother         DICGaussSeidel;
	tolerance        1e-6;
	relTol           1e-3;
    }

    pFinal
    {
	$p;
	relTol          0;
    }

    U
    {
	solver          smoothSolver;
	smoother        symGaussSeidel;
	tolerance       1e-6;
	relTol          1e-3;
    }

    UFinal
    {
	$U;
	relTol          0;
    }
  
    M
    {
	solver          PCG;
	preconditioner  DIC;
	tolerance       1e-6;
	relTol          0;
    }

    C
    {
	solver          smoothSolver;
	smoother        GaussSeidel;
	tolerance       1e-6;
	maxIter         1e5;
	relTol          0;
    }
    
}

PIMPLE
{

    consistent          no;
    momentumPredictor   no;
  
    nNonOrthogonalCorrectors 0;
    nCorrectors              2;
  
    nOuterCorrectors    1; // PISO
    //nOuterCorrectors    2; // PIMPLE
  
    pRefCell    0;
    pRefValue    0;

}


